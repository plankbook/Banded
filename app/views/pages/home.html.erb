<div class="banner" style="background-image: linear-gradient(rgba(24,99,67),rgba(24,99,67,1));">
  <div class="container">
    <h1>
      <strong>Join Forces, </strong><strong>Make Music.</strong>
    </h1>
    <p>The only place where musicians get to connect and create awesome music!</p>
    <p><%= link_to 'list of all artists', artists_path %></p>
  </div>
</div>
<div>
  <h1>Suggested Musicians</h1>
  <% suggested = User.all %>
  <% selections = [] %>
  <% user = suggested.sample %>
  <% 5.times do %>
    <% user = suggested.sample %>
    <% selections.push(user) %>
  <% end %>
  <ul style="flex-direction: row;">
    <% selections.each do |selected| %>
      <div class="container", style="display:block;" >
        <li>
          <p><%= link_to selected.name, artist_path(selected) %></p>
          <p><%= selected.location %></p>
          <p><%= selected.bio %></p>
        </li>
      </div>
    <% end %>
  </ul>

  <div class="profile-card">
    <img class="profile-banner" src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
    <div class="profile-top">
      <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="profile-user avatar-bordered" />
      <div>
        <h2 class="profile-title">Robert Li</h2>
        <p class="profile-location">Montreal, Canada</p>
      </div>
    </div>
    <div class="profile-bio">
      <p>
        English singer, songwriter and composer.
        He is internationally known as a singer and bassist of the Beatles.
        With singer and guitarist John Lennon,...
      </p>
    </div>
    <div class="profile-bottom">
      <div class="profile-instruments">
        <p>Instruments</p>
        <div class="instrument-icons">
          <p class="instrument-icon">🎸</p>
          <p class="instrument-icon">🥁</p>
          <p class="instrument-icon">🎻</p>
        </div>
      </div>
      <div class="profile-genres">
        <p>Genres</p>
        <p class="genre-pill">Rock</p>
      </div>
    </div>
  </div>

</div>
