<div class="profile-card">
    <%= image_tag "user_seed_banner.png", class: "profile-banner" %>
    <%# <img class="profile-banner" src="user_seed_banner.png" /> %>
    <div class="profile-top">
      <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="profile-user avatar-bordered-profile" />
      <div>
        <h2 class="profile-title"><%= link_to user.name, artist_path(user) %></h2>
        <p class="profile-location"><%= user.location %></p>
      </div>
    </div>
    <div class="profile-bio">
      <p>
        <%= user.bio %>
      </p>
    </div>
    <div class="profile-bottom">
      <div class="profile-instruments">
        <p>Instruments</p>
        <div class="instrument-icons">
          <p class="instrument-icon">🎸</p>
          <p class="instrument-icon">🥁</p>
          <p class="instrument-icon">🎻</p>
        </div>
      </div>
      <div class="profile-genres">
        <p>Genres</p>
        <div class="genre-pill">
          <p><%= user.genres.first.name %></p>
        </div>
      </div>
    </div>
  </div>
