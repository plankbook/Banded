<%= form_with url: artists_path, method: :get do %>
  <div class="search-form-control form-group">
    <%= text_field_tag :query,
          params[:query],
          class: "form-control string required",
          placeholder: "Search for projects or musicians"
      %>
    <button name="button" type="submit" class="btn btn-black">
      <i class="fas fa-search"></i>
    </button>
  </div>
<% end %>
