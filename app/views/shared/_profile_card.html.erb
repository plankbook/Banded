<div class="profile-card">
  <%= link_to artist_path(user) do %>
    <% if user.photo.key? %>
      <%= cl_image_tag user.photo.key, class: "profile-banner" %>
    <% else %>
      <img class="profile-banner" src="user_seed_banner.png" />
    <% end %>

    <div class="profile-top">
      <% if user.photo.key? %>
        <%= cl_image_tag user.photo.key, :gravity=>"face", :radius=>"max", :crop=>"fill", class: "profile-user avatar-bordered-profile" %>
      <% else %>
        <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="profile-user avatar-bordered-profile" />
      <% end %>
      <div>
        <h2 class="profile-title"><%= user.name.truncate(18) %></h2>
        <p class="profile-location"><%= user.location %>, Canada</p>
      </div>
    </div>
    <div class="profile-bio">
      <p>
      <% if user.bio? %>
        <%= user.bio.truncate(130) %>
      <% end %>
      </p>
    </div>
    <div class="profile-bottom">
      <div class="profile-instruments">
        <p>Instruments</p>
        <div class="instrument-icons">
        <% user.instruments.each do |instrument| %>
          <% if instrument.name == 'Piano' %>
            <p title="Piano" class="instrument-icon">ğŸ¹</p>
          <% elsif instrument.name == 'Guitar' %>
            <p title="Guitar" class="instrument-icon">ğŸ¸</p>
          <% elsif instrument.name == 'Violin' %>
            <p title="Violin" class="instrument-icon">ğŸ»</p>
          <% elsif instrument.name == 'Drums' %>
            <p title="Drums" class="instrument-icon">ğŸ¥</p>
          <% elsif instrument.name == 'Saxophone' %>
            <p title="Saxophone" class="instrument-icon">ğŸ·</p>
          <% elsif instrument.name == 'Trumpet' %>
            <p title="Trumpet" class="instrument-icon">ğŸº</p>
          <% elsif instrument.name == 'Banjo' %>
            <p title="Banjo" class="instrument-icon">ğŸª•</p>
          <% elsif instrument.name == 'Accordion' %>
            <p title="Accordion" class="instrument-icon">ğŸª—</p>
          <% end %>
        <% end %>
        </div>
      </div>
        <%# raise %>
      <div class="profile-genres">
        <% if user.genres.exists? %>
          <p>Genre</p>
          <div class="genre-pill" style="background-color: <%= user.genres.first.colour.gsub('"', '') %>;">
          <%# raise %>
            <p><%= user.genres.first.name %></p>
          </div>
        <% end %>
      </div>
    </div>
<% end %>
  </div>
