<div id="comment-<%= comment.id %>">
    <%= cl_image_tag comment.sender.photo.key, :gravity=>"face", :radius=>"max", :crop=>"fill", class: "profile-user avatar-bordered-profile" %>
    <small>
      <strong><%= comment.sender.name %></strong>
      <i><%= comment.created_at.strftime("%a %b %e at %l:%M %p") %></i>
    </small>
    <p><%= comment.content %></p>
</div>
